<% layout('layouts/boilerplate') %>
<!--Now we only need to include this one line instead of making two separate partials for Header and Footer-->

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3"> <!--way to get the middle 6 of the column-->
        <form action="/campgrounds" method="POST" novalidate class="validated-form">
            <!--No Validate prevents the browser validations and instead let bootstrap take over and do the validations-->
        <div class="mb-3">
            <label class="form-label" for="title"> Title </label>
            <input class="form-control" tyype="text" id="title" name="campground[title]" required> </input>
            <div class="valid-feedback">
                Looks Good!!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="location"> Location </label>
            <input class="form-control" type="text" id="location" name="campground[location]" required> </input>
            <div class="valid-feedback">
                Nice Place!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="image"> Image URL </label>
            <input class="form-control" type="text" id="image" name="campground[image]" required> </input>
            <div class="valid-feedback">
                Good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="price" required> Campground Price </label>
            <div class="input-group">
                <span class="input-group-text" id="basic-addon1"> â‚¹ </span>
                <input type="text" class="form-control" id="price" placeholder="0.00" aria-describedby="price-label" name="campground[price]">
                 <div class="valid-feedback">
                    It will work
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="description"> Description </label>
            <textarea class="form-control" type="text" id="image" name="campground[description]" required> </textarea>
             <div class="valid-feedback">
                Hmm!!
            </div>
        </div>
        <button class="btn btn-success"> Add Campground </button>
        </form>
        <div class="mb-3">
            <a href="/campgrounds">All Campgrounds </a> 
        </div>            
    </div>
</div>